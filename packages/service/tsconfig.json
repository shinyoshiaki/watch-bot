{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": [
      "esnext",
      "DOM",
    ],
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "useDefineForClassFields": false
  }
}